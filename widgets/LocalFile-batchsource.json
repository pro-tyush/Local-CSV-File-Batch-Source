{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Local File",
  "icon": {
    "type": "inline",
    "arguments": {
      "data": "data:image/png;base64,"
    }
  },
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Used to uniquely identify this source for lineage, annotating metadata etc."
          }
        },
        {
          "label": "Path",
          "name": "filePath",
          "widget-type": "text-box"
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "label": "Generate Schema From CSV",
          "name": "generateSchemaToggle",
          "widget-type": "toggle",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "true"
          }
        },
        {
          "label": "Include Header Values in Records",
          "name": "headersToggle",
          "widget-type": "toggle",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            },
            "default": "false"
          }
        },
        {
          "name": "delimiter",
          "widget-type": "select",
          "widget-attributes": {
            "default": ",",
            "values": [
              ",",
              ";",
              ":",
              ".",
              "|"
            ]
          }
        }
      ]
    }
  ]
}
